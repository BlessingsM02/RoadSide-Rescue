<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoadSide_Rescue.Views.RegisterVehiclePage"
             Title="RegisterVehiclePage">

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Register Your Vehicle" FontSize="Large" HorizontalOptions="Center" />

            <Entry x:Name="MakeEntry" Placeholder="Make" />
            <Entry x:Name="ModelEntry" Placeholder="Model" />
            <Entry x:Name="ColorEntry" Placeholder="Color" />

            <Button Text="Register" Clicked="OnRegisterButtonClicked" BackgroundColor="#263E57" TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>